<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body>
<%- include('./partials/nav.ejs') %>
<div class="form-wrapper">
    <form id="post-form" method="post" action="/edit/<%= post.id %>?_method=PUT">
        <div class="form-info">
            <div>
                <label for="post-title">Post Title</label>
                <input id="post-title" class="form-field" type="text" name="title" value="<%= post.title %>">
            </div>
            <div>
                <label for="post-author">Author</label>
                <input id="post-author" class="form-field" type="text" name="author" value="<%= post.author %>">
            </div>
        </div>
        <div class="form-text">
            <label>Post Text
                <textarea class="form-field" name="text"><%= post.text %></textarea>
            </label>
        </div>
        <div class="form-button">
            <button type="submit">Submit</button>
        </div>
    </form>
</div>
</body>
</html>
